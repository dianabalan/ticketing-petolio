				</a>
				<a href="<?php echo $contact; ?>" class="icon_link send" 
						title="<?php echo $this->translate->_("Contact User"); ?>">
					<span></span>
				</a>
				<a href="<?php echo $services; ?>" class="icon_link service"  
						title="<?php echo $this->translate->_("More Services"); ?>">
