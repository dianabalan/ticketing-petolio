		<?php
			// urls
			$url = $this->url(array('controller'=>'services', 'action'=>'view', 'service' => $service["id"]), 'default', true);
			$profile = $this->url(array('controller'=>'accounts', 'action'=>'view', 'user' => $service["user_id"]), 'default', true);
			$products = $this->url(array('controller'=>'products', 'action'=>'index', 'owner' => $service["user_name"]), 'default', true);
			$contact = $this->url(array('controller'=>'services', 'action'=>'contact', 'service' => $service["id"]), 'default', true);
			$services = $this->url(array('controller'=>'marketplace', 'action'=>'index', 'owner' => $service["user_name"]), 'default', true);
		?>
		<tr>
			<td><a href="<?php echo $url; ?>"><?php echo $service["name"]; ?></a></td>
			<td><?php echo $service["type"]; ?></td>
			<td><?php echo $service["user_name"]; ?></td>
			<td align="right" nowrap="nowrap">
				<a href="<?php echo $profile; ?>" class="icon_link profile" 
